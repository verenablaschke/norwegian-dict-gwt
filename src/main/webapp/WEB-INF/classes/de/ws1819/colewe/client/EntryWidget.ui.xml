<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.wordform {
		margin-top: 5px;
	}
	
	.colloc {
		margin-left: 40px;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:HTMLPanel ui:field="entryPanel">
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="collocOuterPanel" styleName="{style.colloc}">
			<g:Button ui:field="collocButton" styleName="btn btn-outline-secondary">Collocations
			</g:Button>
			<g:VerticalPanel ui:field="collocInnerPanel" styleName="collapse">
			</g:VerticalPanel>
		</g:HTMLPanel>
		<g:HTMLPanel ui:field="sampleOuterPanel" styleName="{style.colloc}">
			<g:Button ui:field="sampleButton" styleName="btn btn-outline-secondary">Collocations
			</g:Button>
			<g:VerticalPanel ui:field="sampleInnerPanel" styleName="collapse">
			</g:VerticalPanel>
		</g:HTMLPanel>
	</g:HTMLPanel>
</ui:UiBinder> 