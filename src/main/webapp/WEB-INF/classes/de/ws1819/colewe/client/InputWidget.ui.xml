<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.important {
		font-weight: bold;
	}
	
	.text-area {
		width: 70%;
		height: 300px;
		margin: auto;
	}
	
	.radio {
		margin-bottom: 10px;
		padding-bottom: 0;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:RadioButton ui:field="radioNO" name="radio"
			styleName="btn btn-outline-secondary {style.radio}">&nbsp;Norsk</g:RadioButton>
		<g:RadioButton ui:field="radioDE" name="radio"
			styleName="btn btn-outline-secondary {style.radio}">&nbsp;Deutsch</g:RadioButton>
		<g:RadioButton ui:field="radioEN" name="radio"
			styleName="btn btn-outline-secondary {style.radio}">&nbsp;English</g:RadioButton>
		<br />
		<g:TextArea styleName="{style.text-area} form-control"
			ui:field="textArea" />
		<br />
		<g:Button styleName="btn btn-primary" ui:field="send">
			<i class="fa fa-arrow-circle-right"></i>
			Send
		</g:Button>
		<g:Button styleName="btn btn-outline-primary" ui:field="example">
			Eksempeltekst
		</g:Button>
	</g:HTMLPanel>
</ui:UiBinder> 