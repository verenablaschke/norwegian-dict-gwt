<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.translation {
		margin-left: 20px;
		margin-bottom: 2px;
		display: inline-block;
		font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
			"Helvetica Neue", Arial, sans-serif, "Apple Color Emoji",
			"Segoe UI Emoji", "Segoe UI Symbol";
		font-size: 0.9rem;
	}
	
	.info-light {
		background-color: #81cfdb;
		color: black;
	}
	
	.warning-light {
		background-color: #fae39c;
	}
	
	.secondary-light {
		background-color: #d4dde6;
		color: black;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:Label ui:field="translation" styleName="{style.translation}" />
		<g:HTML ui:field="grammarBadge" styleName="badge {style.info-light}" />
		<g:HTML ui:field="usageBadge" styleName="badge {style.warning-light}" />
		<g:HTML ui:field="abbrBadge" styleName="badge {style.secondary-light}" />
	</g:HTMLPanel>
</ui:UiBinder> 
