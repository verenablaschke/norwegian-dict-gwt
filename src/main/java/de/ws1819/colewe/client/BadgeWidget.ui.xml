<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui">
	<ui:style>
	.badge {
		font-family: -apple-system, BlinkMacSystemFont, "Segoe UI", Roboto,
			"Helvetica Neue", Arial, sans-serif, "Apple Color Emoji",
			"Segoe UI Emoji", "Segoe UI Symbol";
		font-size: 0.75rem;
		margin-top: 4px;
	}
	
	.info-light {
		background-color: #81cfdb;
		color: black;
	}
	
	.warning-light {
		background-color: #fae39c;
	}
	
	.secondary-light {
		background-color: #d4dde6;
		color: black;
	}
	</ui:style>
	<g:HTMLPanel>
		<g:HTML ui:field="grammarBadge" styleName="badge badge-info {style.badge}" />
		<g:HTML ui:field="usageBadge" styleName="badge badge-warning {style.badge}" />
		<g:HTML ui:field="abbrBadge" styleName="badge badge-secondary {style.badge}" />
		<!-- <g:HTML ui:field="grammarDEBadge" styleName="badge {style.info-light}" 
			/> <g:HTML ui:field="usageDEBadge" styleName="badge {style.warning-light}" 
			/> <g:HTML ui:field="abbrDEBadge" styleName="badge {style.secondary-light}" 
			/> -->
	</g:HTMLPanel>
</ui:UiBinder> 